<div class="container-fluid w-50" id="editProduct">
    <h2 style="text-align: center;" class="mt-3">Edit product</h2>
    <form action="/admin/edit-product/{{products._id}}" method="post" enctype="multipart/form-data">
<div class="mb-3">
  <label for="formGroupExampleInput" class="form-label">Name</label>
  <input type="text" class="form-control" id="formGroupExampleInput"  name="Name" value="{{products.Name}}">
</div>
<div class="mb-3">
  <label for="formGroupExampleInput2" class="form-label">Model</label>
  <input type="text" class="form-control" id="formGroupExampleInput2"  name="Model" value="{{products.Model}}">
</div>
<div class="mb-3">
  <label for="formGroupExampleInput" class="form-label">Price</label>
  <input type="number" class="form-control" id="formGroupExampleInput" name="Price" value="{{products.Price}}">
</div>
<div class="mb-3">
  <p>{{Error}}</p>
  <label for="formGroupExampleInput" class="form-label">Image</label>
  <img src="/images/{{products._id}}.jpg" style="width: 50px; height: 50px;" id="viewimg"  >
  <input type="file" class="form-control" name="Image"  onchange="imgview(event)">
</div>
<div class="mb-3">
  <input type="submit" class="btn btn-info" style="text-align: center;">
</div>
</form>
</div>

<script>
  function imgview(event){
    document.getElementById('viewimg').src=URL.createObjectURL(event.target.files[0]);
  }
</script>