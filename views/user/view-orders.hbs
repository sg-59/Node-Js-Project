 
 <div class="container" id="table">
    <table class="table  border-dark" id="myVieworders">
<h3 style="font-weight: 400;">Order details</h3>
  <thead>
    <tr>
      
      <th scope="col">Time</th>
      <th scope="col">Name</th>
      <th scope="col">Address</th>
      <th scope="col">Mobile</th>
      <th scope="col">UserId</th>
      <th scope="col">Total Price</th>
      <th scope="col">Payment Method</th>
      <th scope="col">View Product</th>

    </tr>
  </thead>
  <tbody>
    {{#each order}}
    <tr>
      <td>{{this.Date}}</td>
      <td>{{this.deliveryStatus.Name}}</td>
      <td>{{this.deliveryStatus.Address}}</td>
      <td>{{this.deliveryStatus.Mobile}}</td>
      <td>{{this.UserId}}</td>
      <td>{{this.Total}}</td>
      <td>{{this.Paymentmethod}}</td>
     <td><a href="/viewProduct/{{this._id}}" class="btn btn-info">View Item</a></td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>

<script>
  $(document).ready( function () {
$('#myVieworders').DataTable();
} );
</script>